{
    "tag_categories": {
        "1. 行为标签": {
            "description": "债务人的具体行为标签，每个标签为布尔值（是/否），并需要提供赋值原因",
            "tags": {
                "异地贷款申请": {
                    "type": "boolean",
                    "inference_rules": [
                        "居住地 != 申请地址的省市",
                        "户籍地 != 申请地址的省市",
                        "gps地址 != 申请地址的省市"
                    ]
                },
                "短期内异地贷款申请": {
                    "type": "boolean",
                    "inference_rules": [
                        "异地贷款申请 = 是",
                        "申请时间 - 上次非本地活动时间 < 30天"
                    ]
                },
                "短期集中购房购车": {
                    "type": "boolean",
                    "inference_rules": [
                        "首次房贷开户时年龄_取值 != null",
                        "近6个月内有购房行为"
                    ],
                    "note": "仅购房(无购车数据)"
                },
                "异常离婚": {
                    "type": "boolean",
                    "inference_rules": [
                        "婚姻状态 = 40(离婚)",
                        "可根据时序判断离婚是否异常"
                    ]
                },
                "征信小花": {
                    "type": "boolean",
                    "inference_rules": [
                        "近6个月所有还款状态所有查询所有机构查询次数 > 10",
                        "12个月内_所有还款状态_信用卡审批+贷款审批_所有机构_查询次数 > 5"
                    ]
                },
                "征信洗白": {
                    "type": "boolean",
                    "inference_rules": [
                        "是否征信白户 = 1",
                        "但存在历史贷款记录"
                    ]
                },
                "与中介通话": {
                    "type": "boolean",
                    "inference_rules": [
                        "无法从现有字段判断"
                    ],
                    "note": "无法确定（需要通话记录数据）"
                },
                "高风险区域来源": {
                    "type": "boolean",
                    "inference_rules": [
                        "户籍地区是否高风险区域 = 1",
                        "现居地区是否高风险区域 = 1"
                    ]
                },
                "非常驻地区购房": {
                    "type": "boolean",
                    "inference_rules": [
                        "购房所属城市 != 家庭地址",
                        "购房所属城市 != 公司地址"
                    ]
                },
                "非常驻地区购车": {
                    "type": "boolean",
                    "inference_rules": [
                        "无购车数据字段"
                    ],
                    "note": "否(无购车数据)"
                },
                "入职高流动公司": {
                    "type": "boolean",
                    "inference_rules": [
                        "当前单位性质为特定高流动行业",
                        "不重复单位数量_计数 > 3"
                    ]
                },
                "短期入职": {
                    "type": "boolean",
                    "inference_rules": [
                        "进入本单位年份距今年数_最小 < 0.5年(6个月)"
                    ]
                },
                "大额贷款申请": {
                    "type": "boolean",
                    "inference_rules": [
                        "1个月内_在册_所有贷款_所有机构_借款金额_合计 > 50000",
                        "产品类型为大额信用贷"
                    ]
                },
                "贷款用途模糊": {
                    "type": "boolean",
                    "inference_rules": [
                        "产品类型为'信用贷'但无具体用途说明"
                    ]
                }
            }
        },
        "2. 时序标签": {
            "description": "按时间顺序展示债务人的关键行为",
            "tags": {
                "行为时序": {
                    "type": "timeline",
                    "format": "行为(日期) -> 行为(日期) -> ...",
                    "example": "异常离婚(2024-01-10) -> 与中介通话(2024-01-15) -> 征信查询(2024-01-20) -> 异地购房(2024-02-05) -> 异地贷款申请(2024-02-10)",
                    "inference_rules": [
                        "提取所有时间相关字段",
                        "按时间排序生成时间线"
                    ]
                },
                "关键时间节点": {
                    "type": "intervals",
                    "format": "事件1(日期) -> 事件2(日期), 间隔=X天",
                    "example": "短期入职(2024-01-05) -> 异常离婚(2024-01-10) -> 贷款申请(2024-02-05), 间隔=31天",
                    "inference_rules": [
                        "计算关键事件之间的时间间隔"
                    ]
                }
            }
        },
        "3. 关联标签": {
            "description": "多个行为或属性之间的关联关系",
            "tags": {
                "区域关联": {
                    "type": "relation",
                    "format": "关联说明",
                    "example": "高风险区域来源+非常驻地区购房+异地贷款申请",
                    "inference_rules": [
                        "如果存在多个区域相关的异常行为，建立关联"
                    ]
                },
                "职业-贷款关联": {
                    "type": "relation",
                    "format": "关联说明",
                    "example": "短期入职+高流动公司+大额贷款申请",
                    "inference_rules": [
                        "如果职业不稳定但申请大额贷款，建立关联"
                    ]
                },
                "征信-行为关联": {
                    "type": "relation",
                    "format": "关联说明",
                    "example": "征信小花+中介通话+异地贷款申请",
                    "inference_rules": [
                        "如果征信查询频繁且有异常行为，建立关联"
                    ]
                },
                "资产-收入关联": {
                    "type": "relation",
                    "format": "关联说明",
                    "example": "购房金额80万+近1年总收入20万+无抵押",
                    "inference_rules": [
                        "比较资产金额与收入的合理性"
                    ]
                }
            }
        },
        "4. 合理性标签": {
            "description": "对债务人行为和数据的合理性判断",
            "tags": {
                "贷款用途合理性": {
                    "type": "judgment",
                    "values": [
                        "合理",
                        "不合理",
                        "无法确定"
                    ],
                    "format": "判断结果(判断依据)",
                    "example": "不合理(申请人仅说明'资金周转'，无具体用途，且无经营证明)",
                    "inference_rules": [
                        "分析产品类型和用途说明的匹配度"
                    ]
                },
                "收入-金额合理性": {
                    "type": "judgment",
                    "values": [
                        "合理",
                        "不合理",
                        "无法确定"
                    ],
                    "format": "判断结果(判断依据)",
                    "example": "不合理(近1年总收入20万，购房金额80万，贷款申请50万，无抵押，金额严重挂钩)",
                    "inference_rules": [
                        "计算收入与贷款/资产的比例",
                        "判断是否存在明显不匹配"
                    ]
                },
                "职业-贷款匹配合理性": {
                    "type": "judgment",
                    "values": [
                        "合理",
                        "不合理",
                        "无法确定"
                    ],
                    "format": "判断结果(判断依据)",
                    "example": "不合理(入职高流动公司仅5天，无工作流水，申请50万贷款，职业稳定性与贷款金额不匹配)",
                    "inference_rules": [
                        "分析职业稳定性",
                        "对比贷款金额与职业匹配度"
                    ]
                }
            }
        }
    }
}